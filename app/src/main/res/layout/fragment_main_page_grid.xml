<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_fragment_frame_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.presentation_layer.fasteritaly.activity.MainPageGridFragment">
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="2"
        android:orientation="horizontal"
        tools:context=".GridXMLActivity" >
        <TextView
            android:id="@+id/grid_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0.1"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="@dimen/main_page_text_grid"
            android:textColor="#FFFF"
            android:shadowColor="@color/cardview_shadow_start_color"
            android:background="@color/semi_transparent"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"/>
        <ImageView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/grid_fragment_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp" />
    </GridLayout>

</FrameLayout>
